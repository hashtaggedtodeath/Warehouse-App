<Window x:Class="Warehouse_App.SupplierWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Поставщик" Height="250" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Название:" Grid.Row="0"/>
        <TextBox x:Name="NameTextBox" Grid.Row="0" Margin="100,0,0,5"/>

        <TextBlock Text="Адрес:" Grid.Row="1"/>
        <TextBox x:Name="AddressTextBox" Grid.Row="1" Margin="100,0,0,5"/>

        <TextBlock Text="Телефон:" Grid.Row="2"/>
        <TextBox x:Name="PhoneTextBox" Grid.Row="2" Margin="100,0,0,5"/>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="SaveButton" Content="Сохранить" Click="SaveButton_Click" Width="100" Margin="5"/>
            <Button Content="Отмена" Click="CancelButton_Click" Width="100" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
