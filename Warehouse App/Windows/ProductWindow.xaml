<Window x:Class="Warehouse_App.Windows.ProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Товар" Height="300" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Название:" Grid.Row="0"/>
        <TextBox x:Name="NameTextBox" Grid.Row="0" Margin="100,0,0,5"/>

        <TextBlock Text="Единицы:" Grid.Row="1"/>
        <TextBox x:Name="UnitTextBox" Grid.Row="1" Margin="100,0,0,5"/>

        <TextBlock Text="Количество:" Grid.Row="2"/>
        <TextBox x:Name="QuantityTextBox" Grid.Row="2" Margin="100,0,0,5"/>

        <TextBlock Text="Цена закупки:" Grid.Row="3"/>
        <TextBox x:Name="PurchasePriceTextBox" Grid.Row="3" Margin="100,0,0,5"/>

        <TextBlock Text="Цена продажи:" Grid.Row="4"/>
        <TextBox x:Name="SalesPriceTextBox" Grid.Row="4" Margin="100,0,0,5"/>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="SaveButton" Content="Сохранить" Click="SaveButton_Click" Width="100" Margin="5"/>
            <Button Content="Отмена" Click="CancelButton_Click" Width="100" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
